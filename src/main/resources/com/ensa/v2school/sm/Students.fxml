<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<?import javafx.scene.layout.HBox?>
<AnchorPane prefHeight="402.0" prefWidth="560.0" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.ensa.v2school.sm.Controllers.StudentsController" stylesheets="@/students.css">
   <children>
       <HBox layoutX="27" layoutY="20" spacing="15" alignment="CENTER_LEFT">

           <Label text="Students">
               <font>
                   <Font size="24.0"/>
               </font>
           </Label>

           <HBox spacing="10">
               <Button fx:id="addBtn" text="add" onAction="#handleAdd"/>
               <Button fx:id="editBtn" text="edit" onAction="#handleEdit"/>
               <Button fx:id="deleteBtn" text="delete" onAction="#handleDelete"/>
           </HBox>
       </HBox>

       <TableView fx:id="TableView"
                  layoutX="23"
                  layoutY="114"
                  prefHeight="288"
                  prefWidth="514">
       <columns>
          <TableColumn fx:id="idCol" prefWidth="75.0" text="id" />
          <TableColumn fx:id="firstNameCol" prefWidth="121.20001220703125" text="firstName" />
            <TableColumn fx:id="lastNameCol" prefWidth="106.40000915527344" text="lastName" />
            <TableColumn fx:id="averageCol" minWidth="0.0" prefWidth="83.60003662109375" text="Average" />
            <TableColumn fx:id="MajorCol" prefWidth="126.39996337890625" text="Major" />
        </columns>
      </TableView>
      <TextField fx:id="searchId" layoutX="27.0" layoutY="71.0" prefHeight="25.0" prefWidth="170.0" promptText="search by id " />
       <HBox layoutX="203" layoutY="71" spacing="10">
           <Button fx:id="searchBtn"
                   onAction="#handleSearch"
                   text="search"/>
           <Button fx:id="cancelBtn"
                   onAction="#handleCancelSearch"
                   text="cancel"/>
           <ComboBox fx:id="filterMajorBtn"
                     layoutX="330.0"
                     layoutY="71.0"
                     prefHeight="30.0"
                     prefWidth="160.0"
                     promptText="Filter by major"
                     onAction="#loadMajorTableView"/>
       </HBox>
   </children>
</AnchorPane>
