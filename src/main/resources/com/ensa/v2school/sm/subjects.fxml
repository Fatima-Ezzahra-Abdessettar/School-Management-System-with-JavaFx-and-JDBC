<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="402.0" prefWidth="620.0" stylesheets="@/students.css" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.ensa.v2school.sm.Controllers.SubjectController">
    <children>
        <HBox alignment="CENTER_LEFT" layoutX="27" layoutY="20" spacing="15">
            <Label text="Subjects">
                <font>
                    <Font size="24.0" />
                </font>
            </Label>

            <HBox spacing="10">
                <Button fx:id="addBtn" onAction="#handleAdd" text="add" />
                <Button fx:id="editBtn" onAction="#handleEdit" text="edit" />
                <Button fx:id="deleteBtn" onAction="#handleDelete" text="delete" />
            </HBox>
        </HBox>

        <TableView fx:id="TableView" layoutX="23" layoutY="114" prefHeight="288" prefWidth="572.0">
            <columns>
                <TableColumn fx:id="idCol" prefWidth="123.99997520446777" text="ID" />
                <TableColumn fx:id="nameCol" prefWidth="282.4000244140625" text="Subject Name" />
                <TableColumn fx:id="majorCol" prefWidth="164.39999389648438" text="Majors" />
            </columns>
        </TableView>

        <TextField fx:id="searchId" layoutX="27.0" layoutY="71.0" prefHeight="25.0" prefWidth="170.0" promptText="search by id" />

        <HBox layoutX="203" layoutY="71" spacing="10">
            <Button fx:id="searchBtn" onAction="#handleSearch" prefHeight="25.0" prefWidth="82.0" text="search" />
            <Button fx:id="cancelBtn" onAction="#handleCancelSearch" prefHeight="25.0" prefWidth="97.0" text="cancel" />
            <ComboBox fx:id="filterMajorBtn" onAction="#loadMajorTableView" prefHeight="30.0" prefWidth="194.0" promptText="Filter by major" />
        </HBox>
    </children>
</AnchorPane>
