<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.layout.HBox?>

<AnchorPane prefHeight="402.0" prefWidth="560.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.ensa.v2school.sm.Controllers.SubjectController" stylesheets="@/students.css">
    <children>
        <HBox layoutX="27" layoutY="20" spacing="15" alignment="CENTER_LEFT">
            <Label text="Subjects">
                <font>
                    <Font size="24.0"/>
                </font>
            </Label>

            <HBox spacing="10">
                <Button fx:id="addBtn" text="add" onAction="#handleAdd"/>
                <Button fx:id="editBtn" text="edit" onAction="#handleEdit"/>
                <Button fx:id="deleteBtn" text="delete" onAction="#handleDelete"/>
            </HBox>
        </HBox>

        <TableView fx:id="TableView"
                   layoutX="23"
                   layoutY="114"
                   prefHeight="288"
                   prefWidth="514">
            <columns>
                <TableColumn fx:id="idCol" prefWidth="100.0" text="ID" />
                <TableColumn fx:id="nameCol" prefWidth="250.0" text="Subject Name" />
                <TableColumn fx:id="majorCol" prefWidth="164.0" text="Major" />
            </columns>
        </TableView>

        <TextField fx:id="searchId" layoutX="27.0" layoutY="71.0" prefHeight="25.0" prefWidth="170.0" promptText="search by id" />

        <HBox layoutX="203" layoutY="71" spacing="10">
            <Button fx:id="searchBtn"
                    onAction="#handleSearch"
                    text="search"/>
            <Button fx:id="cancelBtn"
                    onAction="#handleCancelSearch"
                    text="cancel"/>
            <ComboBox fx:id="filterMajorBtn"
                      prefHeight="30.0"
                      prefWidth="160.0"
                      promptText="Filter by major"
                      onAction="#loadMajorTableView"/>
        </HBox>
    </children>
</AnchorPane>