<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox spacing="15" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.ensa.v2school.sm.Controllers.MajorsFormController"
      prefWidth="450" prefHeight="300" stylesheets="@/student-form.css">
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <GridPane hgap="10" vgap="15">
        <Label fx:id="idLabel" text="ID:" GridPane.rowIndex="0" GridPane.columnIndex="0" managed="false" visible="false"/>
        <TextField fx:id="idField" GridPane.rowIndex="0" GridPane.columnIndex="1"
                   prefWidth="300" editable="false" managed="false" visible="false"/>

        <Label text="Major Name:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
        <TextField fx:id="nameField" GridPane.rowIndex="1" GridPane.columnIndex="1"
                   prefWidth="300" promptText="Enter major name"/>

        <Label text="Description:" GridPane.rowIndex="2" GridPane.columnIndex="0"
               GridPane.valignment="TOP"/>
        <TextArea fx:id="descriptionField" GridPane.rowIndex="2" GridPane.columnIndex="1"
                  prefWidth="300" prefHeight="100" wrapText="true"
                  promptText="Enter major description (optional)"/>
    </GridPane>

    <HBox spacing="10" alignment="CENTER_RIGHT">
        <Button text="Save" onAction="#handleSave" styleClass="btn-primary" prefWidth="80"/>
        <Button text="Cancel" onAction="#handleCancel" styleClass="btn-secondary" prefWidth="80"/>
    </HBox>
</VBox>