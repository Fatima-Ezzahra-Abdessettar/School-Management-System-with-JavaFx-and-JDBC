<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.chart.BarChart?>
<?import javafx.scene.chart.CategoryAxis?>
<?import javafx.scene.chart.NumberAxis?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="425.0" prefWidth="592.0" stylesheets="@/stats.css" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.ensa.v2school.sm.Controllers.StatsController">

    <VBox layoutX="26.0" layoutY="14.0" spacing="20" AnchorPane.leftAnchor="26.0" AnchorPane.rightAnchor="14.0" AnchorPane.topAnchor="14.0">

        <!-- TITLE -->
        <Label style="-fx-font-size: 24px; -fx-font-weight: bold;" text="Dashboard" />

        <!-- STAT CARDS -->
        <HBox alignment="CENTER" maxWidth="1.7976931348623157E308" prefHeight="80.0" prefWidth="70.0" spacing="15">

            <VBox prefHeight="80.0" prefWidth="168.0" style="-fx-padding: 15; -fx-background-color: #e3f2fd; -fx-background-radius: 8;">
                <Label text="Students" />
                <Label fx:id="studentsCountLbl" style="-fx-font-size: 22px; -fx-font-weight: bold;" text="0" />
            </VBox>

            <VBox prefWidth="160" style="-fx-padding: 15; -fx-background-color: #e8f5e9; -fx-background-radius: 8;">
                <Label text="Majors" />
                <Label fx:id="majorsCountLbl" style="-fx-font-size: 22px; -fx-font-weight: bold;" text="0" />
            </VBox>

            <VBox prefWidth="160" style="-fx-padding: 15; -fx-background-color: #fff3e0; -fx-background-radius: 8;">
                <Label text="Average" />
                <Label fx:id="avgLbl" style="-fx-font-size: 22px; -fx-font-weight: bold;" text="0.0" />
            </VBox>

        </HBox>
        <BarChart fx:id="avgPerMajorChart" animated="false" legendVisible="false" prefHeight="250" prefWidth="472.0">

            <xAxis>
                <CategoryAxis label="Major" />
            </xAxis>

            <yAxis>
                <NumberAxis label="Average" />
            </yAxis>

        </BarChart>


    </VBox>

</AnchorPane>
