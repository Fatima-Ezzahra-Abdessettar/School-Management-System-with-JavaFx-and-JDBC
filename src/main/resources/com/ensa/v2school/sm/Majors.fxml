<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="402.0" prefWidth="638.0" stylesheets="@/students.css" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.ensa.v2school.sm.Controllers.MajorsController">
    <children>
        <HBox alignment="CENTER_LEFT" layoutX="27" layoutY="20" spacing="15">
            <Label text="Majors">
                <font>
                    <Font size="24.0" />
                </font>
            </Label>

            <HBox spacing="10">
                <Button fx:id="addBtn" onAction="#handleAdd" text="add" />
                <Button fx:id="editBtn" onAction="#handleEdit" text="edit" />
                <Button fx:id="deleteBtn" onAction="#handleDelete" text="delete" />
            </HBox>
        </HBox>

        <TableView fx:id="TableView" layoutX="23" layoutY="114" prefHeight="288" prefWidth="603.0">
            <columns>
                <TableColumn fx:id="idCol" prefWidth="50.0" text="ID" />
                <TableColumn fx:id="nameCol" prefWidth="150.0" text="Major Name" />
                <TableColumn fx:id="descriptionCol" prefWidth="257.1999969482422" text="Description" />
                <TableColumn fx:id="actionsCol" prefWidth="144.79998779296875" text="Actions" />
            </columns>
        </TableView>

        <TextField fx:id="searchId" layoutX="27.0" layoutY="71.0" prefHeight="25.0" prefWidth="230.0" promptText="search by id" />

        <HBox layoutX="274.0" layoutY="71.0" prefHeight="25.0" prefWidth="207.0" spacing="10">
            <Button fx:id="searchBtn" onAction="#handleSearch" prefHeight="25.0" prefWidth="117.0" text="search" />
            <Button fx:id="cancelBtn" onAction="#handleCancelSearch" prefHeight="25.0" prefWidth="116.0" text="cancel" />
        </HBox>
    </children>
</AnchorPane>
